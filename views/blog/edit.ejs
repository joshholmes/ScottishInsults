<%- include('../partials/header', { title: title }) %>
<h1>Edit Blog Post</h1>
<% if (error) { %>
  <div class="error" style="color: red; margin-bottom: 20px;"><%= error %></div>
<% } %>
<form method="POST" action="/blog/edit/<%= form.id %>" style="max-width: 600px; margin: 0 auto;">
  <label style="display: block; margin-bottom: 10px;">Title:<br><input type="text" name="title" value="<%= form.title || '' %>" required style="width: 100%; padding: 8px;"></label>
  <label style="display: block; margin-bottom: 10px;">Slug:<br><input type="text" name="slug" value="<%= form.slug || '' %>" required style="width: 100%; padding: 8px;"></label>
  <label style="display: block; margin-bottom: 10px;">Excerpt:<br><textarea name="excerpt" style="width: 100%; padding: 8px;"><%= form.excerpt || '' %></textarea></label>
  <label style="display: block; margin-bottom: 10px;">Meta Description:<br><input type="text" name="meta_description" value="<%= form.meta_description || '' %>" style="width: 100%; padding: 8px;"></label>
  <label style="display: block; margin-bottom: 10px;">Content:<br><textarea name="content" rows="10" required style="width: 100%; padding: 8px;"><%= form.content || '' %></textarea></label>
  <label style="display: block; margin-bottom: 10px;">Published Date:<br><input type="datetime-local" name="published_date" value="<%= form.published_date ? new Date(form.published_date).toISOString().slice(0, 16) : '' %>" style="width: 100%; padding: 8px;"></label>
  <label style="display: block; margin-bottom: 10px;">Status:<br>
    <select name="status" style="width: 100%; padding: 8px;">
      <option value="draft" <%= form.status === 'draft' ? 'selected' : '' %>>Draft</option>
      <option value="published" <%= form.status === 'published' ? 'selected' : '' %>>Published</option>
      <option value="archived" <%= form.status === 'archived' ? 'selected' : '' %>>Archived</option>
    </select>
  </label>
  <button type="submit" style="padding: 10px; background-color: #4CAF50; color: white; border: none; border-radius: 5px; cursor: pointer;">Update Post</button>
</form>
<%- include('../partials/footer') %> 