<%- include('../partials/header', { title: title }) %>
<h1>Admin - Blog Posts</h1>
<p><a href="/blog/create" style="display: inline-block; margin-bottom: 20px; padding: 10px; background-color: #4CAF50; color: white; text-decoration: none; border-radius: 5px;">Create New Post</a></p>
<table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
  <thead>
    <tr style="background-color: #f2f2f2;">
      <th style="padding: 10px; border: 1px solid #ddd;">Title</th>
      <th style="padding: 10px; border: 1px solid #ddd;">Slug</th>
      <th style="padding: 10px; border: 1px solid #ddd;">Status</th>
      <th style="padding: 10px; border: 1px solid #ddd;">Published Date</th>
      <th style="padding: 10px; border: 1px solid #ddd;">Last Modified</th>
      <th style="padding: 10px; border: 1px solid #ddd;">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% posts.forEach(post => { %>
      <tr>
        <td style="padding: 10px; border: 1px solid #ddd;"><%= post.title %></td>
        <td style="padding: 10px; border: 1px solid #ddd;"><%= post.slug %></td>
        <td style="padding: 10px; border: 1px solid #ddd;"><%= post.status %></td>
        <td style="padding: 10px; border: 1px solid #ddd;"><%= new Date(post.published_date).toLocaleString() %></td>
        <td style="padding: 10px; border: 1px solid #ddd;"><%= new Date(post.last_modified).toLocaleString() %></td>
        <td style="padding: 10px; border: 1px solid #ddd;"><a href="/blog/edit/<%= post.id %>" style="color: #2196F3; text-decoration: none;">Edit</a></td>
      </tr>
    <% }); %>
  </tbody>
</table>
<%- include('../partials/footer') %> 